{
	"compilerOptions": {
		"allowJs": true,
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "es6",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"alwaysStrict": false,
		"noImplicitUseStrict": true,
		"moduleResolution": "node",
		"lib": [
			"es5",
			"es6"
		]
	},
	"include": [
		"./types/**/*",
		"./src/**/*"
	],
	"exclude": [
		"node_modules",
		"src/**/__tests__/*.ts",
		"src/__mocks__/*.ts"
	]
}

